@model Models.ViewModels.ProductUserVM
@{
    ViewData["Title"] = "Check Out Complete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <br />
    <div>
        <div class="container">
            <div class="card border-0">
                <div class="card-header bg-dark text-primary ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        <h1>Thank you for your order!</h1>
                    </div>
                </div>
                <div class="card-body bg-secondary">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-4 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span>Customer Details:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-2">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-12">
                                        <input asp-for="ApplicationUser.FullName" disabled type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-2">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-12">
                                        <input asp-for="ApplicationUser.Email" disabled type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span>Order Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @for (int i = 0; i < Model.ProductList.Count(); i++)
                                        {
                                            <input type="hidden" asp-for="@Model.ProductList[i].ItemId" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].ItemName" />
                                            <li class="list-group-item bg-secondary d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.ProductList[i].ItemName</h6>
                                                    <small class="text-light">Price/item: $@Model.ProductList[i].ItemPrice</small>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                    <div class="row pr-5" style="float:right">
                                        <h4>Total:</h4>&nbsp;&nbsp;<span class="font-weight-bolder">@string.Format("{0:c}", @Model.PurchaseTotal)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-success w-100"><i class="fas fa-arrow-left"></i>&nbsp;Return to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
