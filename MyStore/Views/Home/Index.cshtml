@model IEnumerable<Models.Store>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row">
        <div class="col text-center">
            <h3 class="text-success">FuncoLand. Bring Home The Fun.</h3>
            <p style="color:rgba(177, 168, 168, 0.90)">Shop for all of your favorite video-games, consoles, and gaming accessories.</p>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        
            <table class="table table-striped table-dark" style="width: 100%; border-radius: 10px;">
                <thead>
                    <tr class="text-center text-primary">
                        <th colspan="3">
                            <h3>STORES</h3>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr class="text-center">
                            <td width="40%">@obj.StoreAddress</td>
                            <td width="20%">@obj.PhoneNumber</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-route-id="@obj.StoreId" asp-controller="ViewInventory" asp-action="Index" class="btn btn-primary mx-2">
                                        View&nbsp;<i class="fas fa-gamepad"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            }
            else
            {
            <p>No items exist.</p>
            }
        </div>
