
@{
    ViewData["Title"] = "Edit Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Models.Inventory


<form method="post">
    <input asp-for="InventoryId" hidden />
    <input asp-for="Store1Id" hidden />
    <input asp-for="Item1Id" hidden />
    <div class="bg-dark p-3" style="border-radius:10px">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Inventory Amount</h2>
        </div>
        <div class="row text-light">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Store1.StoreAddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Store1.StoreAddress" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Item1.ItemName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Item1.ItemName" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="InventoryAmount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="InventoryAmount" class="form-control" />
                        <span asp-validation-for="InventoryAmount" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-arrow-left"></i>&nbsp;Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

