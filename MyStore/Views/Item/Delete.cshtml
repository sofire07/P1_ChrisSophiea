@model Models.Item
@{
    ViewData["Title"] = "Delete Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Utility;
<form method="post">

    <input asp-for="ItemId" hidden />

    <div class="bg-dark p-3" style="border-radius:10px">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row text-light">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ItemName" disabled class="form-control" />

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ItemPrice" disabled class="form-control" />

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemDescription"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="ItemDescription" class="form-control summernote"></textarea>

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemCategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ItemCategory.CategoryName" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                            <button asp-route-id="@Model.ItemId" type="submit" class="btn btn-danger w-100">Delete</button>



                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-arrow-left"></i>&nbsp;Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.ItemId != 0)
                {
                    //update
                    <img src="@WC.ImagePath@Model.ItemImage" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }

            </div>
        </div>

    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}