@model IEnumerable<Models.Item>
@{
    ViewData["Title"] = "Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Item List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Item" asp-action="Upsert" class="btn btn-primary float-right">Create New Item</a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-dark" style="width: 100%; border-radius: 10px;">
            <thead class="text-primary">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="25%">@obj.ItemName</td>
                    <td width="25%">@obj.ItemCategory.CategoryName</td>
                    <td width="25%">@obj.ItemDescription</td>
                    <td width="10%">@obj.ItemPrice</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-id="@obj.ItemId" asp-action="Upsert" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-route-id="@obj.ItemId" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items exist.</p>
    }
</div>

