@model Models.Inventory
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@using Utility;

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Item1.ItemCategory.Id">
    <!-- Card-->
    <div class="card border-0 rounded bg-dark shadow-sm">
        <div class="card-body px-3 pt-3 pb-1 row" style="font-family:Games;">
            <div class="col-7"><label class="float-left text-light">@Model.Item1.ItemName</label></div>
            <div class="col-5"><label class="float-right"><span class="text-info h5" style="font-family: Impact;">@string.Format("{0:c0}", @Model.Item1.ItemPrice)</span></label> </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.ImagePath@Model.Item1.ItemImage" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100" style="background-color:lavenderblush">@Model.Item1.ItemCategory.CategoryName</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100" style="background-color:aliceblue">Available: @Model.InventoryAmount</span>
            </div>
            <div class="col-12 mt-1 p-2">
                <a asp-action="Detail" asp-route-id="@Model.InventoryId" class="btn btn-secondary form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>
