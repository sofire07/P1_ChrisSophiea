@model IEnumerable<Models.ApplicationUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">User List</h2>
        </div>
    </div>
    <br /><br />
    <form asp-controller="User" asp-action="Index">
        <h4>
            Search: <input type="text" name="SearchString" style="font-family: 'Impact'"> 
            <input type="submit" class="btn btn-success text-dark" value="Submit"/>

        </h4>
    </form>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-dark" style="width: 100%; border-radius: 10px;">
            <thead class="text-primary">
                <tr>
                    <th>
                        Full Name
                    </th>
                    <th>
                        Email/Username
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="35%">@obj.FullName</td>
                        <td width="35%">@obj.Email</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-id="@obj.Id" asp-action="ViewPurchases" class="btn btn-primary mx-2">
                                    Purchases&nbsp;<i class="fas fa-money-check-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items exist.</p>
    }
</div>

