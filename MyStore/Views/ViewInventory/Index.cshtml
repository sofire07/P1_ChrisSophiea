@model Models.ViewModels.HomeVM
@{
    ViewData["Title"] = Model.Store.StoreAddress;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="text-center">
        <button class="btn btn-danger filter-button" data-filter="all">All</button>
        @foreach (var obj in Model.ItemCategories)
        {
            <button class="btn btn-outline-light btn-secondary filter-button" data-filter="@obj.Id">
                @obj.CategoryName
            </button>
        }
    </div>
    <br />
    <div class="row">
        @foreach (var prod in Model.Inventories)
        {

                <partial name="_IndividualProductCard" model="prod" />

        }
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $(".filter-button").click(function () {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }
            });

        });
    </script>
}